extends layout 

block content
  main.container.d-flex.justify-content-center.align-items-center.h-100.w-100.flex-column 
    form.form-signin(action="/login", method="post")
      h1.text-center.pb-3 Logga In HÃ¤r 
      .mb-3
        label.form-label.visually-hidden(for="username") Username: 
        input#username.form-control(placeholder="username" type="text", name="username", value=username ? username : '', class=errors ? 'is-invalid' : '') 
        if errors
          .invalid-feedback Username or password is wrong
      .mb-3
        label.form-label.visually-hidden(for="password") Password: 
        input#password.form-control(placeholder="password" type="password", name="password" class=errors ? 'is-invalid' : '')
        if errors 
          .invalid-feedback Username or password is wrong

      button.w-100.btn.btn-primary(type="submit") Sign in