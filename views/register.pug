extends layout

block content
  main.container.d-flex.justify-content-center.align-items-center.h-100.w-100.flex-column
    form.form-signin(action="/register", method="post")
      h1.text-center.pb-3 Gå med i #{title} idag!
      .mb-3
        label.form-label.visually-hidden(for="username") Username:
        input#username.form-control(placeholder="Användarnamn" type="text", name="username", value=username ? username : '', class=errors ? 'is-invalid' : '')
        if errors 
          .invalid-feedback Username is invalid or unavailable.
      .mb-3
        label.form-label.visually-hidden(for="email") Email:
        input#email.form-control(placeholder="E-postadress" type="email", name="email", value=email ? email : '', class=errors ? 'is-invalid' : '')
        if errors
          .invalid-feedback Email is invalid or unavailable.
      .mb-3
        label.form-label.visually-hidden(for="password") Password:
        input#password.form-control(placeholder="Lösenord" type="password", name="password" class=errors ? 'is-invalid' : '')
        if errors 
          .invalid-feedback Passwords do not match.
      .mb-3
        label.form-label.visually-hidden(for="passwordconfirmation") Password confirmation:
        input#passwordconfirmation.form-control(placeholder="Konfirmera Lösenord" type="password", name="passwordconfirmation" class=errors ? 'is-invalid' : '')
        if errors 
          .invalid-feedback Passwords do not match.

      button.w-100.btn.btn-primary(type="submit") Registrera
      a(href = '/login') Redan medlem? Logga in här!


